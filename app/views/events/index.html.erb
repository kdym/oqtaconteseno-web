<div id="map-hint"><i class="fa fa-lightbulb-o"></i> <%= t('map_hint') %></div>

<div id="map"></div>

<script type="text/html" id="add-event-info-window-template">
  <a href="" id="add-new-event-link" class="btn btn-link"><i class="fa fa-plus"></i> <%= t('new_event') %></a>
</script>

<script type="text/html" id="event-info-window-template">
  <div>
    <div class="event-info-window-container">
      <div class="event-header">
        <div class="row">
          <div class="col-md-3">
            <figure class="to-center">
              <image src="${icon}"/>
            </figure>
          </div>

          <div class="col-md-9">
            <h1>${name}</h1>

            <h2>${type}</h2>
          </div>
        </div>
      </div>

      <div class="event-period ${timing_class}">
        ${timing}
      </div>

      <div class="event-pricing ${pricing_class}">
        ${pricing}
      </div>

      <div class="event-rating">
        <div class="row align-items-center">
          <div class="col-md-6">
            <p>{{html stars}}</p>

            <p>${evaluations}</p>
          </div>

          <div class="col-md-6 to-right">
            <!--<i class="fa fa-fire fa-2x text-danger" data-toggle="tooltip" title="Esse evento estÃ¡ bombando"></i>-->
          </div>
        </div>
      </div>

      <div class="event-actions to-right">
        <a href="" class="btn btn-primary btn-sm"><i class="fa fa-thumbs-up"></i> <%= t('interested') %></a>
        <a href="/events/${event_id}" class="btn btn-primary btn-sm"><i class="fa fa-ellipsis-h"></i> <%= t('details') %></a>
      </div>
    </div>
  </div>
</script>

<div class="modal" id="add-event-modal">
  <div class="modal-dialog" role="document">
    <div class="loading-div">
      <i class="fa fa-spinner fa-4x fa-pulse"></i>
    </div>

    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= t('new_event') %></h5>

        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <%= render 'form', event: @event %>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-success" id="add-event-button"><i class="fa fa-check"></i> <%= t('save') %>
        </button>
      </div>
    </div>
  </div>
</div>