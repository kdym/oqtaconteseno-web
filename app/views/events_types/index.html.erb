<div class="content">
  <h1><%= EventsType.model_name.human(count: 2) %></h1>

  <div class="row">
    <div class="col-md-4">
      <%= render 'form', eventType: @eventType %>
    </div>

    <div class="col">
      <div class="box">
        <div class="box-body">
          <table class="table table-hover" id="events-types-list">
            <thead>
            <tr>
              <th><%= EventsType.human_attribute_name('icone') %></th>
              <th><%= EventsType.human_attribute_name('nome') %></th>
              <th><%= EventsType.human_attribute_name('width') %></th>
              <th><%= t('actions') %></th>
            </tr>
            </thead>
            <tbody>
            <% @eventsTypes.each do |e| %>
                <tr>
                  <td><%= image_tag events_types_show_icon_path(e), width: e.width, height: EventsType::ICON_HEIGHT %></td>
                  <td><%= e.nome %></td>
                  <td><%= e.width %></td>
                  <td>
                    <% if policy(e).edit? %>
                        <%= link_to t('edit'), edit_events_type_path(e), class: 'btn btn-link' %>
                    <% end %>

                    <% if policy(e).destroy? %>
                        <%= link_to t('delete'), events_type_path(e), class: 'btn btn-link', method: :delete, data: {confirm: t('delete_confirm')} %>
                    <% end %>
                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>