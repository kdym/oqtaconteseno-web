<div id="user-area">
  <a id="avatar-menu"><%= image_tag current_user.image, class: 'img-responsive img-circle' %></a>

  <div id="user-popover">
    <div id="user-info">
      <figure>
        <%= image_tag current_user.image, class: 'img-responsive img-circle' %>
      </figure>

      <h1><%= current_user.name %></h1>
    </div>

    <div id="user-actions">
      <%= link_to "<i class='fa fa-sign-out'></i> #{t('logout')}".html_safe, destroy_user_session_path, class: 'btn btn-default', method: :delete %>
    </div>
  </div>
</div>