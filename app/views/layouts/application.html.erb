<!DOCTYPE html>
<html>
<head>
  <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
  <title><%= t('app_name') %></title>
  <%= csrf_meta_tags %>

  <%= favicon_link_tag 'favicon.png', type: 'image/png' %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<div id="wrapper">
  <header>
    <div class="container-fluid">
      <div class="row align-items-center">
        <div class="col-md-6 col-sm-6">
          <figure id="logo">
            <a href="<%= events_path %>">
              <%= image_tag 'logo_horizontal.png', class: 'img-fluid', alt: t('app_name'), id: 'logo' %>
            </a>
          </figure>
        </div>

        <div class="col-md-6 col-sm-6">
          <%= render 'user_area/user_area' %>
        </div>
      </div>
    </div>
  </header>

  <main>
    <%= yield %>
  </main>

  <footer>
    <%= link_to t('kdym_name'), ApplicationController::KDYM_SITE, target: '_blank' %>
  </footer>

  <% if notice %>
      <div class="main-alert alert alert-success alert-dismissable">
        <i class="fa fa-check"></i>
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <b><%= notice %></b>
      </div>
  <% end %>

  <% if alert %>
      <div class="main-alert alert alert-danger alert-dismissable">
        <i class="fa fa-ban"></i>
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <b><%= alert %></b>
      </div>
  <% end %>
</div>
</body>

<%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=#{GoogleMapsHelper::API_KEY}" %>
<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

</html>
